@{
    var contactList = ViewData["contactList"] as List<ContactListViewModel>;
}


<div class="contact-list" id="contactList">
    @foreach (ContactListViewModel contact in contactList)
    {
        if (contact.IsFavorite)
        {
            <a class="contact-item" asp-controller="Contact" asp-action="ContactDetails" asp-route-id="@contact.Id">
                <div class="contact-list-item">
                    <h2>@contact.Name<span><i class="fa-solid fa-star" style="scale:0.5; float:right;"></i></span></h2>
                    <p>@contact.Email</p>
                    <p>@contact.Mobile </p>
                </div>
            </a>
        }
    }
</div>